<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New Hex", new_hexes_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @hexes.each do |hex| %>
      <tr>
        <td><%= hex.name %></td>
        <td><%= link_to "Download Hex", hex.attachment_url %></td>
        <td><%= button_to "Delete",  hex, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{hex.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
