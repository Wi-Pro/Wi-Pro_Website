<div class="well">
  <%= form_for @hex do |f| %>
    <%= render 'shared/hexes_error_messages' %>
    <%if logged_in? %>
    <%= f.label "Which Wi-Pro do you want to checkout?"%></br>
    <%=f.collection_select(:wiproid, Wiproid.where(userid: current_user.id), :wiproid, :name)%>
    <a href="/wiproids">Add Device!</a>
    <%end%>
    </br>
    </br>
    <%= f.submit "Checkout!", class: "btn btn-primary" %>
  <% end %>
  </br>
  </br>
  <h2>Welcome to the Checkout Page!</h2>
  <p>This is the section that you will checkout a device on.</p>
</div>
