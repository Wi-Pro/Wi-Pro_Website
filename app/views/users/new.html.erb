<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="well">
  <%= form_for(@user) do |f| %>
    <%= f.label :name %>
    </br>
    <%= f.text_field :name %>
    </br>
    <%= f.label :email %>
    </br>
    <%= f.email_field :email %>
    </br>
    <%= f.label :password %>
    </br>
    <%= f.password_field :password %>
    </br>
    <%= f.label :password_confirmation, "Confirmation" %>
    </br>
    <%= f.password_field :password_confirmation %>
    </br>
    </br>
    <%= f.submit "Create my account", class: "btn btn-primary" %>
  <% end %>
</div>
